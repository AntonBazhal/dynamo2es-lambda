root: true

env:
    node: true
    es6: true

extends:
    - "eslint:recommended"
    - "airbnb-base"

parserOptions:
    sourceType: "scripts"

ecmaFeatures:
    generators: true

rules:
    arrow-body-style: 0
    arrow-parens: [2, "as-needed"]
    comma-dangle: 0
    class-methods-use-this: 0
    func-names: 0
    indent: [2, 2, { "SwitchCase": 1 }]
    no-tabs: 0
    no-underscore-dangle: 0
    padded-blocks: 0
    space-before-function-paren: 0
